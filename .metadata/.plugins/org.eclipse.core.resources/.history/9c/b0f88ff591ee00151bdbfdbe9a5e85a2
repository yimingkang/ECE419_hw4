public class ClientDriver {
    public static void main(String[] args){
        zkc = new ZkConnector();
        
        try {
            zkc.connect(hostAndPort);
        } catch(Exception e) {
            logger.info("Zookeeper connect "+ e.getMessage());
            System.exit(-1);
        }
        zk = zkc.getZooKeeper();
    }
}
